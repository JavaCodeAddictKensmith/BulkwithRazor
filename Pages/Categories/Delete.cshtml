@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
<form method="post">
    <div class=" border p-3 mt-4">
        <div class="row p-2">
            <h2 class=" text-primary">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for='Category.Name'></label>
            <input asp-for='Category.Name' class="form-control" disabled />

        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />

        </div>
        <div class="row">
            <div class="col-6 col-md-3"> <button class="btn btn-primary form-control" type="submit" style="width:150px">
                    Delete</button>
            </div>

            <div class="col-6 col-md-3"> <a asp-page="/categories/index" class="btn btn-secondary border form-control
                    " style="width:150px">Back to
                    List</a>
            </div>
        </div>



    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}